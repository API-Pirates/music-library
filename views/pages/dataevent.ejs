<%- include('../layout/head')%>
    <%- include('../layout/navbar')%>

        <body>
            <header class="header">
                <div class="layout-container">
                    <h1>
                        <%= event.title%>
                    </h1>
                </div>
            </header>
            <section class="layout-container">
                <% data.forEach(event=> { %>
                    <section class="displaySongs">

                        <h3>
                            <%= event.event_url %>
                        </h3>
                        <h4>
                            <%= event.venue %>
                        </h4>
                        <h3>
                            <%= event.title %>
                        </h3>
                        <h4>
                            <%= event.date %>
                        </h4>
                        <h3>
                            <%= event.image_url %>
                        </h3>
                        <p>
                            <%= event.description %>
                        </p>

                        <a class="style-button" id="showBook" href="/events/<%= event.id %>">Details</a>

                    </section>
                    <% }) %>


            </section>
            <%- include('../layout/footer') %>
        </body>

        </html>