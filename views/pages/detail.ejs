    <header class="header">
        <div class="layout-container">
            <h1 id="detailHeader">
                <%= data.title %>
            </h1>
        </div>
    </header>
    <section id='home-events'>
        <div class="layout-container">
            <div class="w3-content w3-section">
                <article>
                    <section class="details">
                        <figcaption>
                            <h5>
                                <span>Artist: </span>
                                <%= data.artist %>
                            </h5>
                            <h5>
                                <span>Album: </span>
                                <%= data.album %>
                            </h5>
                            <h5>
                                <span>Rating: </span>
                                <%= data.rating %>
                            </h5>
                            <h5>
                                <span>Genre: </span>
                                <%= data.genre %>
                            </h5>
                            <h5 class="lyrics-overflow">
                                <span>Lyrics:</span>
                                <%= data.lyrics %> <br>
                            </h5>
                            <div class="events-flex">
                                <form action="/deleteData/<%= data.id %>?_method=Delete" method="post" id="myForm">
                                    <br><br>
                                    <button id="delete"> Delete song</button>
                                    <form action="">

                                    </form>
                                    <button id="myupdateBu">Update Song</button>
                                </form>
                            </div>
                    </section>
                    </figcaption>
                </article>
            </div>
    </section>
    <section class="updateSongs223" style="display: none;">
        <form action="/updateData/<%= data.id %>?_method=PUT" method="post">
            <input type="text" name="title" value="<%= data.title %>"><br>
            <input type="text" name="artist" value="<%= data.artist  %>"><br>
            <input type="text" name="album" value="<%= data.album %>"><br>
            <input type="text" name="rating" value="<%=  data.rating %>"><br>
            <input type="text" name="genre" value="<%=  data.genre %>"><br>
            <textarea name="lyrics" cols="150"><%= data.lyrics %></textarea><br>
            <button class="updateMusicDetails" type="submit">Update data</button>
            <button id="cancel">Cancel</button>
        </form>
    </section>
    </div>

    </main>
    <%- include('../layout/footer') %>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script>
            $("#myupdateBu").click(() => {
                $(".updateSongs223").toggle();
                $(".details").toggle();
            })
            $("#cancel").click(() => {
                $(".details").toggle();
                $(".updateSongs223").toggle();
            })
        </script>
