<%- include('../layout/head')%>

<body>
      <%- include('../layout/navbar')%>
        <div id='search-song' class="login-box layout-container ">
          <form action="/songs" method="GET">
              <div class="user-box">
                  <input type="text" name="formatInput" id="song" placeholder="Search for songs">

                  <label class="search-song-label" for=" singer">Artist</label>
                  <input type="radio" name="searchBy" value="q_artist" id="singer">

                  <label class="search-song-label" for="track">Song</label>
                  <input type="radio" name="searchBy" value="q_track" id="track">
                  
                  <label class="search-song-label" for=" lyrics">Lyrics</label>
                  <input type="radio" name="searchBy" value="q_lyrics" id="lyrics">
              </div>
              <a href="" style="position: relative;">
                  <input type="submit" value="Search">
              </a>
          </form>
      </div>

    <% songSearches.forEach(song=> { %>
      <div class="container1">
        <div class="cards1">
          <a class="card1" href="#" style="background: #17223b; color:white;">
            <span class="card-header1">
              <iframe width="100%" height="80%" src="https://www.youtube.com/embed/<%= song.youtube %>">
              </iframe>
              <span class="card-title1">
                <h3>Title: <%=song.title%>
                </h3>
              </span>
            </span>
            <span class="card-summary1">
              Artist: <%=song.artist%> <br>
                Album name: <%=song.album%><br>
                  Rating: <%=song.rating%><br>
            </span>
            <span class="card-meta1">
              <form class="form" action="/songs/add" method="post">
                <input type="text" name="title" value="<%=song.title%>" hidden>
                <input type="text" name="artist" value="<%=song.artist%>" hidden>
                <input type="text" name="album" value="<%=song.album%>" hidden>
                <input type="text" name="rating" value="<%=song.rating%>" hidden>
                <input type="text" name="genre" value="<%=song.genre%>" hidden>
                <input type="text" name="image_url" value="<%=song.image_url%>" hidden>
                <button type="submit" class="addd">Add to library</button>
              </form>
            </span>
          </a>
        </div>
      </div>
      <% })%>
                  
      <%- include('../layout/footer') %>
                  
    </body>

    </html>