<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <detalis>MUSICALLY</detalis>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href='style/base.css'>
    <link rel="icon" href="images/logo.png" type="image/gif" sizes="16x16">

    <style>
        /* search-results css  */

        @charset "UTF-8";
        @import url("https://fonts.googleapis.com/css?family=Open+Sans:300,400,700");
        @import url("https://fonts.googleapis.com/css?family=Orbitron&display=swap");
        @import url("https://fonts.googleapis.com/css?family=Hind&display=swap");


        .button {
            /* background-color: #26001b; */
            /* Green */
            border-radius: 15px;
            border: none;
            color: white;
            padding: 10px 27px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 0.6em;
            /* margin: 4px 2px; */
            margin: auto;
            margin-top: 10%;
            cursor: pointer;
            -webkit-transition-duration: 0.4s;
            /* Safari */
            transition-duration: 0.4s;

            box-shadow: 5px 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
            background-color: #503272b2;
           
           
        }

        .button:hover {
            box-shadow: 5px 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
            background-color: #26001bb9;
     

        }


        #home-events article figcaption {
    display: inline-block;
    width: 100%;
    vertical-align: top;
    background-color: #5757c6;
    padding: 5% 2%;
}  
    </style>
</head>
<%- include('../layout/navbar')%>

    <body>
        <header class="header">
            <div class="layout-container">
                <h1>Upcoming Events</h1>
            </div>
        </header>
        <div class=" searchEventsBox layout-container">
            <div class="login-box layout-container">

                <form action="/events" method="GET">
                    <div class="user-box">
                        <input type="text" name="artist" id="artist" placeholder="Search for Event">
                    </div>
                    <a href="">
                        <input class="button" type="submit" value="Search">
                    </a>
                </form>
            </div>
        </div>
        <section id='home-events'>
            <div class="layout-container">
                <div class="w3-content w3-section">
                    <% if(searchResults.length> 1){ %>
                        <% searchResults.forEach((event, index)=> { %>
                            <article>
                                <img src="<%= event.thumb_url %>" alt="">
                                <figcaption>
                                    <h3> <span>Artist:</span>
                                        <%= event.artistName %>
                                    </h3>
                                    <h5><span>Status:</span>
                                        <%= event.status %>
                                    </h5>
                                    <h5><span>Place:</span>
                                        <%= event.namePlace%>
                                    </h5>
                                    <h5><span>Location:</span>
                                        <%= event.country +`, ` + event.city +`, `+ event.region %>
                                    </h5>
                                    <h5><span>Datetime:</span>
                                        <%= event.datetime %>
                                    </h5>
                                    <h5> <span>Sale Date:</span>
                                        <%= event.on_sale_datetime %>
                                    </h5>
                                    <h5> <span>Description:</span>
                                        <%= event.description %>
                                    </h5>
                                    <h5> <span>Facebook Page:</span><a href="<%= event.facebook_page_url %>">
                                            Facebook</a>
                                    </h5>

                                    <div class="events-flex">
                                        <form action="<%= event.offers %>">
                                            <input class="button" type="submit" value="Book Your Ticket " />
                                        </form>
                                        <form action="/saveEvent" method="POST" id="myForm">
                                            <label for=""></label>
                                            <button class="button" id="saveforLater" type="submit">Save for
                                                later</button>
                                            <input type="hidden" name="offers" value="<%= event.offers %>"> 
                                            <input type="hidden" name="status" value="<%= event.status %>">
                                            <input type="hidden" name="country" value="<%= event.country %>">
                                            <input type="hidden" name="city" value="<%= event.city %>">
                                            <input type="hidden" name="region" value="<%= event.region %>">
                                            <input type="hidden" name="namePlace" value="<%= event.namePlace %>">
                                            <input type="hidden" name="datetime" value="<%= event.datetime %>">
                                            <input type="hidden" name="on_sale_datetime" value="<%= event.on_sale_datetime %>">
                                            <input type="hidden" name=" description" value="<%= event.description %>">
                                            <input type="hidden" name="image_url" value="<%= event.thumb_url %>">
                                            <input type="hidden" name="artistName" value="<%= event.artistName %>">
                                            <input type="hidden" name="facebook_page_url"
                                                value="<%= event.facebook_page_url %>">
                                        </form>
                                    </div>
                                </figcaption>

                </div>


                </article>



                <%});%>
                    <% } else{ %>
                        <img class="no-event" src="images/eventsFinal.png">

                        <% } %>

            </div>




        </section>









































